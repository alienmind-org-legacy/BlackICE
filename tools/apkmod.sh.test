#!/bin/bash
. tools/util_sh

HELP="Usage: $0 <file.apk> <mod.dir>"
if [ "$#" -lt "2" ]; then
  echo "$HELP"
  exit 1
fi

APK=`FixPath $1`
MOD_DIR=`FixPath $2`
OUT_DIR=work/`basename $APK .apk`
OUT_DIR=`FixPath $OUT_DIR`
NEWAPK=work/`basename $APK`
NEWAPK=`FixPath $NEWAPK`
APKTOOL=$PWD/tools/apktool.jar 
: ${LOG:=/dev/null}

# Both sys and regular apk's should be signed
SIGN=1

# SystemUI / framework-res shouldn't have their meta-inf removed
#SYS=`echo $MOD_DIR | grep -e SystemUI -e framework-res`
SYS="true"
if [ "$SYS" != "" ]; then
  SYS=1
  RMMETA=0
  SIGN=0
else
  SYS=0
  RMMETA=1
  SIGN=1
fi

# Package containing compiled sources should be recompiled afterwards
XML=`ls $MOD_DIR/res/ | grep -v drawable`
RES=`ls $MOD_DIR/res/ | grep drawable`

if [ -f "$APK" ]; then
  rm -rf $OUT_DIR
  #mkdir -p $OUT_DIR

  # If there are resources, we just decrypt / cp / encrypt
  # prior to copying the images, as they may be broken (9.png...)
  if [ "$XML" != "" ]; then
    # Decompile
    ShowMessage "  [MOD|apkd] " `basename $APK` " => " `basename "$OUT_DIR"`
    java -jar $APKTOOL d $APK $OUT_DIR &>> $LOG || exit 1
    # Copy resources
    ShowMessage "  [MOD|cp] " `basename $MOD_DIR` " => " `basename "$OUT_DIR"`
    for i in $XML; do
       cp -av $MOD_DIR/res/$i $OUT_DIR &>> $LOG
    done
    # Recompile
    ShowMessage "  [MOD|apkb] " `basename $MOD_DIR` " => " `basename "$OUT_DIR"`
    java -jar $APKTOOL b $OUT_DIR $NEWAPK &>> $LOG || exit 1
    mv $OUT_DIR $OUT_DIR.decompile # preserve temp
  else
    ShowMessage "  [MOD|cp] " `basename $APK` " => " `basename "$NEWAPK"`
    cp -p $APK $NEWAPK
  fi

  # Now we unzip / zip the images
  if [ "$RES" != "" ]; then
    ShowMessage "  [MOD|7zax] " `basename $APK` " => " `basename "$OUT_DIR"`
    7za x -o"$OUT_DIR" $NEWAPK &>> $LOG

    # Optimize png?
 		#find "$OUT_DIR/res" -name *.png | while read PNG_FILE ;
 		#do
 		#	if [ `echo "$PNG_FILE" | grep -c "\.9\.png$"` -eq 0 ] ; then
 		#		optipng -o99 "$PNG_FILE"
 		#	fi
 		#done

    # Remove meta-inf on regular apk's
    if [ "$RMMETA" = "1" ]; then
      ShowMessage "  [MOD|rm] META-INF"
      rm -rf $OUT_DIR/META-INF/ &>> $LOG
    fi

    ShowMessage "  [MOD|7zaa] " `basename $MOD_DIR` " => " `basename "$OUT_DIR"`
    mv $NEWAPK $NEWAPK.decompile  # preserve temp
    7za a -tzip $NEWAPK $OUT_DIR/* -mx9 &>> $LOG || exit 1
  fi

  # Sign
  if [ "$SIGN" = "1" ]; then
    ShowMessage "  [MOD|sign] " `basename $NEWAPK`  " => " `basename "$APK"`
    sign.sh $NEWAPK $APK &>> $LOG || exit 1
  else
    ShowMessage "  [MOD|mv] " `basename $NEWAPK`  " => " `basename "$APK"`
    mv $NEWAPK $APK &>> $LOG || exit 1
  fi

  cd - &> /dev/null
fi
exit 0
